</head>

<body>

  <!-- nav bar -->

  <div class="start">
    <div class="main">
      <video muted autoplay loop src="/elements/travlogVidHD.mov"></video>

      <div class="container">
        <div class="navbar">
          <div class="brand">
            <img class="box" src="/elements/Vector.svg" height="40px" />
            <p>Travlog</p>
          </div>
          <div class="nav">
            <a href="/home" id="selected" style="color:black;transform: scale(1.04);">Home</a>
            <a href="/home" class="nonselected">Discover</a>
            <a href="/home" class="nonselected">Special Deals</a>
            <a href="/home" class="nonselected">Contact</a>
          </div>

          <%if(id==="none"){%>
            <div class="login1">
              <form method="get" action="/login">
                <button id="login" type="submit">Log In</button>
              </form>
              <form method="get" action="/signup">
                <button id="signup">Sign Up</button>
              </form>
            </div>
            <%}else{%>
              <div class="user">
                <i class="fa-solid fa-user" id="userProf"></i>
                <div class="userDropdown">
                  <a href="#">My Booking</a>
                  <a href="#">Previous trip</a>
                  <a href="#">Edit profile</a>
                  <a href="/home">LogOut</a>
                </div>
              </div>
              <%}%>
                <img src="/elements/menu.11 1.svg" id="mobileDrop" />
        </div>

